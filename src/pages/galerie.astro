---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Récupérer les spectacles pour organiser la galerie
const spectacles = (await getCollection('spectacles'))
  .filter(s => s.data.active)
  .sort((a, b) => a.data.order - b.data.order);

// Générer les vidéos depuis les spectacles qui ont une videoUrl
const videos = spectacles
  .filter(s => s.data.videoUrl)
  .map(s => {
    const videoId = s.data.videoUrl!.split('v=')[1]?.split('&')[0];
    return {
      title: s.data.title,
      url: `https://www.youtube.com/embed/${videoId}`,
      spectacle: s.slug,
    };
  });
---

<Layout 
  title="Galerie" 
  description="Découvrez en images nos spectacles musicaux et théâtraux. Photos et vidéos de nos représentations."
>
  <!-- En-tête de page -->
  <section class="page-header">
    <div class="container">
      <h1>Galerie</h1>
      <p class="page-subtitle">
        Revivez en images nos spectacles et moments forts
      </p>
    </div>
  </section>

  <!-- Section Vidéos -->
  <section class="videos-section">
    <div class="container">
      <h2 class="section-title">Nos vidéos</h2>
      <p class="section-intro">Extraits et bandes-annonces de nos créations</p>
      
      <div class="videos-grid">
        {videos.map((video) => (
          <article class="video-card">
            <div class="video-wrapper">
              <iframe
                src={video.url}
                title={video.title}
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            </div>
            <h3>{video.title}</h3>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Section Photos -->
  <section class="photos-section">
    <div class="container">
      <h2 class="section-title">Photos</h2>
      <p class="section-intro">Moments de scène, répétitions et complicité</p>

      <div class="gallery-grid">
        {Array.from({ length: 18 }, (_, i) => i + 1).map((i) => (
          <div class="gallery-item">
            <img
              src={`/images/galerie/photo-${String(i).padStart(2, '0')}.jpg`}
              alt={`Photo spectacle ${i}`}
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Contact -->
  <section class="cta-section">
    <div class="container">
      <h2>Besoin de visuels ?</h2>
      <p>Contactez-nous pour recevoir notre dossier de presse avec photos haute résolution</p>
      <a href="/contact" class="btn btn-primary btn-large">Demander le dossier de presse</a>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background: linear-gradient(135deg, rgba(35, 61, 76, 0.95) 0%, rgba(0, 0, 0, 0.85) 100%);
    color: white;
    padding: 5rem 0 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    top: -250px;
    left: -100px;
    animation: cosmic-float 20s ease-in-out infinite;
  }

  @keyframes cosmic-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-30px, 30px) scale(1.1); }
  }

  .page-header h1 {
    color: white;
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
    position: relative;
  }

  .page-subtitle {
    font-size: 1.35rem;
    opacity: 0.95;
    position: relative;
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-style: italic;
  }

  .section-intro {
    text-align: center;
    font-size: 1.15rem;
    color: #6B7280;
    margin-bottom: var(--spacing-lg);
  }

  /* Section Vidéos */
  .videos-section {
    padding: var(--spacing-xl) 0;
  }

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 3rem;
  }

  .video-card {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    border: 1px solid rgba(35, 61, 76, 0.08);
    transition: all 0.4s ease;
  }

  .video-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-5px);
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-primary), #1a3340);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-card h3 {
    padding: 1.5rem;
    color: var(--color-primary);
    font-size: 1.25rem;
    font-family: var(--font-heading);
  }

  /* Section Photos */
  .photos-section {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--color-light-bg) 0%, white 100%);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .gallery-item {
    aspect-ratio: 4 / 3;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all 0.4s ease;
    cursor: pointer;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.08);
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, #1a3340 100%);
    color: white;
    padding: var(--spacing-xl) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    bottom: -250px;
    left: -100px;
    animation: cosmic-float 20s ease-in-out infinite reverse;
  }

  .cta-section h2 {
    color: white;
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin-bottom: 1.5rem;
    position: relative;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    position: relative;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0 2rem;
    }

    .videos-grid {
      grid-template-columns: 1fr;
    }

    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>
