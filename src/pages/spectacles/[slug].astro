---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/Icon.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const spectacles = await getCollection('spectacles');
  return spectacles.map(spectacle => ({
    params: { slug: spectacle.slug },
    props: { spectacle },
  }));
}

const { spectacle } = Astro.props;
const { Content } = await spectacle.render();
---

<Layout
  title={spectacle.data.title}
  description={spectacle.data.description}
>
  <!-- En-tête spectacle -->
  <section class="spectacle-header">
    <div class="container">
      <div class="header-content">
        <h1>{spectacle.data.title}</h1>
        {spectacle.data.subtitle && (
          <p class="spectacle-subtitle">{spectacle.data.subtitle}</p>
        )}
        <p class="spectacle-description">{spectacle.data.description}</p>

        <div class="spectacle-meta">
          <span class="meta-badge"><Icon name="clock" size={18} /> {spectacle.data.duration}</span>
          <span class="meta-badge"><Icon name="users" size={18} /> {spectacle.data.audience}</span>
        </div>

        <div class="header-actions">
          <a href="/contact" class="btn btn-primary">Demande de réservation</a>
          <a href="/spectacles" class="btn btn-secondary">← Tous les spectacles</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Image + Vidéo -->
  <section class="media-section">
    <div class="container">
      <div class="media-grid" data-has-video={spectacle.data.videoUrl ? "true" : "false"}>
        <div class="media-image">
          <img src={spectacle.data.image} alt={spectacle.data.title} loading="lazy" />
        </div>
        {spectacle.data.videoUrl && (() => {
          const videoId = spectacle.data.videoUrl!.split('v=')[1]?.split('&')[0];
          return (
            <div class="media-video">
              <div class="video-wrapper">
                <iframe
                  src={`https://www.youtube.com/embed/${videoId}`}
                  title={`Vidéo - ${spectacle.data.title}`}
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                />
              </div>
            </div>
          );
        })()}
      </div>
    </div>
  </section>

  <!-- Contenu détaillé -->
  <section class="content-section">
    <div class="container">
      <div class="prose">
        <Content />
      </div>
    </div>
  </section>

  <!-- CTA Contact -->
  <section class="cta-section">
    <div class="container">
      <h2>Intéressé par ce spectacle ?</h2>
      <p>Contactez-nous pour organiser une représentation</p>
      <a href="/contact" class="btn btn-primary btn-large">Nous contacter</a>
    </div>
  </section>
</Layout>

<style>
  .spectacle-header {
    background: linear-gradient(135deg, rgba(35, 61, 76, 0.95) 0%, rgba(0, 0, 0, 0.85) 100%);
    color: white;
    padding: 5rem 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .spectacle-header::before {
    content: '';
    position: absolute;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    top: -300px;
    right: -100px;
    animation: cosmic-float 20s ease-in-out infinite;
  }

  @keyframes cosmic-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, -30px) scale(1.1); }
  }

  .header-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    position: relative;
  }

  .spectacle-header h1 {
    color: white;
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 900;
    font-style: italic;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .spectacle-subtitle {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-style: italic;
    opacity: 0.95;
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .spectacle-description {
    font-size: 1.25rem;
    line-height: 1.8;
    opacity: 0.95;
    margin-bottom: 2.5rem;
  }

  .spectacle-meta {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-bottom: 2.5rem;
    flex-wrap: wrap;
  }

  .meta-badge {
    background-color: rgba(255, 255, 255, 0.15);
    padding: 1rem 2rem;
    border-radius: 2rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .meta-badge:hover {
    background-color: rgba(253, 128, 46, 0.3);
    transform: translateY(-2px);
  }

  .header-actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .media-section {
    padding: 3rem 0 0;
  }

  .media-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .media-grid[data-has-video="false"] {
    grid-template-columns: 1fr;
    max-width: 600px;
  }

  .media-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    min-height: 300px;
    max-height: 400px;
  }

  .media-video {
    display: flex;
    align-items: center;
  }

  .video-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  @media (max-width: 768px) {
    .media-grid {
      grid-template-columns: 1fr;
    }

    .media-image img {
      max-height: 300px;
    }
  }

  .content-section {
    padding: var(--spacing-xl) 0;
  }

  .prose {
    max-width: 900px;
    margin: 0 auto;
    line-height: 1.9;
    font-size: 1.125rem;
  }

  .prose :global(h2) {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-style: italic;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .prose :global(h3) {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
    color: #374151;
  }

  .prose :global(ul) {
    list-style: none;
    padding-left: 0;
    margin-bottom: 2rem;
  }

  .prose :global(li) {
    padding-left: 2rem;
    margin-bottom: 0.75rem;
    position: relative;
    line-height: 1.7;
  }

  .prose :global(li::before) {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    font-weight: bold;
  }

  .prose :global(strong) {
    color: var(--color-primary);
    font-weight: 600;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, #1a3340 100%);
    color: white;
    padding: var(--spacing-xl) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    bottom: -250px;
    left: -100px;
    animation: cosmic-float 20s ease-in-out infinite reverse;
  }

  .cta-section h2 {
    color: white;
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin-bottom: 1.5rem;
    position: relative;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    position: relative;
  }

  @media (max-width: 768px) {
    .spectacle-header {
      padding: 3rem 0 2rem;
    }

    .spectacle-meta {
      flex-direction: column;
      align-items: center;
    }

    .header-actions {
      flex-direction: column;
      width: 100%;
      padding: 0 1rem;
    }

    .header-actions .btn {
      width: 100%;
    }
  }
</style>
