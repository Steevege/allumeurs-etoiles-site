---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// R√©cup√©rer tous les spectacles actifs
const spectacles = (await getCollection('spectacles'))
  .filter(s => s.data.active)
  .sort((a, b) => a.data.order - b.data.order);
---

<Layout 
  title="Nos Spectacles" 
  description="D√©couvrez notre r√©pertoire de spectacles musicaux et th√©√¢traux : Il √©tait 2 foi(s), Vices & Versa, C√¥te √† c√¥te et bien d'autres cr√©ations."
>
  <!-- En-t√™te de page -->
  <section class="page-header">
    <div class="container">
      <h1>Nos Spectacles</h1>
      <p class="page-subtitle">
        D√©couvrez notre r√©pertoire de spectacles musicaux et th√©√¢traux pour √©mouvoir et faire r√©fl√©chir
      </p>
    </div>
  </section>

  <!-- Liste des spectacles -->
  <section class="spectacles-list">
    <div class="container">
      <div class="spectacles-grid">
        {spectacles.map((spectacle) => (
          <article class="spectacle-card">
            <div class="card-image">
              <img
                src={spectacle.data.image}
                alt={spectacle.data.title}
                loading="lazy"
                width="600"
                height="400"
              />
            </div>
            <div class="card-content">
              <h2>{spectacle.data.title}</h2>
              {spectacle.data.subtitle && (
                <p class="card-subtitle">{spectacle.data.subtitle}</p>
              )}
              <p class="card-description">{spectacle.data.description}</p>
              
              <div class="card-meta">
                <span class="meta-item">
                  <strong>‚è±Ô∏è Dur√©e :</strong> {spectacle.data.duration}
                </span>
                <span class="meta-item">
                  <strong>üë• Public :</strong> {spectacle.data.audience}
                </span>
              </div>

              <a href={`/spectacles/${spectacle.slug}`} class="btn btn-primary">
                En savoir plus ‚Üí
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA R√©servation -->
  <section class="cta-section">
    <div class="container">
      <h2>Envie d'accueillir un de nos spectacles ?</h2>
      <p>Contactez-nous pour organiser une repr√©sentation dans votre ville, th√©√¢tre, √©cole ou festival.</p>
      <a href="/contact" class="btn btn-primary btn-large">Demande de r√©servation</a>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background: linear-gradient(135deg, rgba(35, 61, 76, 0.95) 0%, rgba(0, 0, 0, 0.85) 100%);
    color: white;
    padding: 5rem 0 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    top: -250px;
    right: -100px;
    animation: cosmic-float 20s ease-in-out infinite;
  }

  @keyframes cosmic-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, -30px) scale(1.1); }
  }

  .page-header h1 {
    color: white;
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
    position: relative;
  }

  .page-subtitle {
    font-size: 1.35rem;
    opacity: 0.95;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
  }

  .spectacles-list {
    padding: var(--spacing-xl) 0;
  }

  .spectacles-grid {
    display: grid;
    gap: 4rem;
  }

  .spectacle-card {
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: 3rem;
    background: white;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(35, 61, 76, 0.08);
    position: relative;
  }

  .spectacle-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--color-secondary), var(--color-primary));
  }

  .spectacle-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .spectacle-card:nth-child(even) {
    grid-template-columns: 1.3fr 1fr;
    direction: rtl;
  }

  .spectacle-card:nth-child(even) > * {
    direction: ltr;
  }

  .card-image {
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-primary), #1a3340);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .spectacle-card:hover .card-image img {
    transform: scale(1.08);
  }

  .card-content {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .card-content h2 {
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-family: var(--font-heading);
    font-style: italic;
  }

  .card-subtitle {
    font-style: italic;
    color: #6B7280;
    margin-bottom: 1.5rem;
    font-size: 1.15rem;
  }

  .card-description {
    line-height: 1.8;
    margin-bottom: 2rem;
    color: #374151;
  }

  .card-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--color-light-bg) 0%, white 100%);
    border-radius: var(--radius-md);
    border: 1px solid rgba(35, 61, 76, 0.08);
  }

  .meta-item {
    font-size: 1rem;
    color: #374151;
  }

  .meta-item strong {
    color: var(--color-primary);
    font-weight: 600;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, #1a3340 100%);
    color: white;
    padding: var(--spacing-xl) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    bottom: -250px;
    right: -100px;
    animation: cosmic-float 20s ease-in-out infinite reverse;
  }

  .cta-section h2 {
    color: white;
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin-bottom: 1.5rem;
    position: relative;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    position: relative;
  }

  .btn-large {
    padding: 1.25rem 2.5rem;
    font-size: 1.1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0 2rem;
    }

    .spectacles-grid {
      gap: 2.5rem;
    }

    .spectacle-card,
    .spectacle-card:nth-child(even) {
      grid-template-columns: 1fr;
      direction: ltr;
    }

    .card-content {
      padding: 2rem;
    }
  }
</style>
