    margin-bottom: 1.5rem;
    position: relative;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    position: relative;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0 2rem;
    }

    .mission-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .mission-values {
      padding: 2rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
    }

    .partners-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
