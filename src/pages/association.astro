<style>
  .page-header {
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.95) 0%, rgba(0, 0, 0, 0.85) 100%);
    color: white;
    padding: 5rem 0 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(249, 115, 22, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    top: -250px;
    right: 50%;
    animation: cosmic-float 20s ease-in-out infinite;
  }

  @keyframes cosmic-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, -30px) scale(1.1); }
  }

  .page-header h1 {
    color: white;
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
    position: relative;
  }

  .page-subtitle {
    font-size: 1.35rem;
    opacity: 0.95;
    position: relative;
  }

  /* Section Mission */
  .mission-section {
    padding: var(--spacing-xl) 0;
  }

  .mission-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 5rem;
    align-items: start;
  }

  .mission-text h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-style: italic;
    margin-bottom: 2rem;
  }

  .lead {
    font-size: 1.35rem;
    line-height: 1.7;
    color: var(--color-primary);
    margin-bottom: 2rem;
    font-weight: 500;
  }

  .mission-text p {
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: #374151;
  }

  .mission-values {
    background: linear-gradient(135deg, var(--color-light-bg) 0%, white 100%);
    padding: 3rem;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid rgba(30, 58, 138, 0.08);
  }

  .mission-values h3 {
    font-size: 1.75rem;
    color: var(--color-primary);
    margin-bottom: 2rem;
    font-family: var(--font-heading);
  }

  .values-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .values-list li {
    display: flex;
    gap: 1.5rem;
    align-items: start;
  }

  .value-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .values-list strong {
    display: block;
    color: var(--color-primary);
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
  }

  .values-list p {
    color: #6B7280;
    line-height: 1.6;
    margin: 0;
  }

  /* Section √âquipe */
  .team-section {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--color-light-bg) 0%, white 100%);
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-style: italic;
  }

  .section-intro {
    text-align: center;
    font-size: 1.15rem;
    color: #6B7280;
    margin-bottom: var(--spacing-lg);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
  }

  .team-member {
    background: white;
    padding: 2.5rem;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: all 0.4s ease;
    border: 1px solid rgba(30, 58, 138, 0.08);
  }

  .team-member:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .member-photo {
    width: 150px;
    height: 150px;
    margin: 0 auto 2rem;
    border-radius: 50%;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-primary), #1e40af);
    box-shadow: var(--shadow-md);
  }

  .photo-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
    color: white;
  }

  .team-member h3 {
