---
import Layout from '../layouts/Layout.astro';

// URL CSV du Google Sheets publié (Fichier → Publier sur le Web → CSV)
const SHEET_CSV_URL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vS3-HCSDkdEewDoHs6gbNh2Nvml9XWR4K_D615oT8HhDii3O6vVn_978i8K9PZWY-Wr1hD1yr8YqlNq/pub?output=csv';
---

<Layout
  title="Calendrier Tournée"
  description="Découvrez toutes nos dates de spectacles à venir. Réservez votre place pour nos prochaines représentations."
>
  <!-- En-tête de page -->
  <section class="page-header">
    <div class="container">
      <h1>Calendrier Tournée</h1>
      <p class="page-subtitle">
        Retrouvez-nous en tournée dans toute la France
      </p>
    </div>
  </section>

  <!-- Prochains événements -->
  <section class="events-upcoming" id="section-upcoming">
    <div class="container">
      <h2 class="section-title">Prochaines dates</h2>
      <div id="upcoming-events" class="events-grid">
        <p class="loading-text">Chargement des dates...</p>
      </div>
    </div>
  </section>

  <!-- Aucun événement (caché par défaut) -->
  <section class="no-events" id="section-no-events" style="display:none">
    <div class="container">
      <p>Aucune date programmée pour le moment. Revenez bientôt !</p>
      <a href="/contact" class="btn btn-primary">Nous contacter pour une réservation</a>
    </div>
  </section>

  <!-- Événements passés (caché par défaut) -->
  <section class="events-past" id="section-past" style="display:none">
    <div class="container">
      <h2 class="section-title">Dates passées</h2>
      <div id="past-events" class="events-grid-compact"></div>
    </div>
  </section>

  <!-- CTA Contact -->
  <section class="cta-section">
    <div class="container">
      <h2>Envie de nous accueillir ?</h2>
      <p>Contactez-nous pour organiser une représentation dans votre ville</p>
      <a href="/contact" class="btn btn-primary btn-large">Demande de réservation</a>
    </div>
  </section>
</Layout>

<script define:vars={{ SHEET_CSV_URL }}>
  const SHEET_URL = SHEET_CSV_URL;

  // Échappement HTML pour éviter les injections XSS
  function escapeHTML(str) {
    if (!str) return '';
    return str.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
  }

  // Parse une ligne CSV (gère les guillemets et virgules dans les champs)
  function parseLine(line) {
    const result = [];
    let current = '';
    let inQuotes = false;
    for (const char of line) {
      if (char === '"') {
        inQuotes = !inQuotes;
      } else if (char === ',' && !inQuotes) {
        result.push(current);
        current = '';
      } else {
        current += char;
      }
    }
    result.push(current);
    return result;
  }

  // Parse le CSV complet en objets
  function parseCSV(text) {
    const lines = text.trim().split('\n');
    const headers = parseLine(lines[0]).map(h => h.trim());
    return lines.slice(1)
      .map(line => {
        const values = parseLine(line);
        const obj = {};
        headers.forEach((h, i) => obj[h] = (values[i] || '').trim());
        return obj;
      })
      .filter(row => row['Date']);
  }

  // Parse une date DD/MM/YYYY ou YYYY-MM-DD
  function parseDate(dateStr) {
    if (!dateStr) return new Date(0);
    if (dateStr.includes('/')) {
      const parts = dateStr.split('/');
      return new Date(parts[2], parts[1] - 1, parts[0]);
    }
    return new Date(dateStr);
  }

  // Formatage date
  function formatDay(date) {
    return date.toLocaleDateString('fr-FR', { day: '2-digit' });
  }

  function formatMonth(date) {
    return date.toLocaleDateString('fr-FR', { month: 'short' });
  }

  function formatDateCompact(date) {
    return date.toLocaleDateString('fr-FR', { day: '2-digit', month: 'short', year: 'numeric' });
  }

  // Icônes SVG inline (style cohérent avec le reste du site)
  const svgAttrs = 'xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"';
  const iconPin = `<svg ${svgAttrs}><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>`;
  const iconClock = `<svg ${svgAttrs}><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>`;
  const iconTicket = `<svg ${svgAttrs}><path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"/><path d="M13 5v2"/><path d="M13 17v2"/><path d="M13 11v2"/></svg>`;

  // Rendu d'une carte événement à venir
  function renderUpcomingEvent(event) {
    const date = parseDate(event['Date']);
    let html = `
      <article class="event-card">
        <div class="event-date">
          <span class="date-day">${formatDay(date)}</span>
          <span class="date-month">${formatMonth(date)}</span>
          <span class="date-year">${date.getFullYear()}</span>
        </div>
        <div class="event-details">
          <h3>${escapeHTML(event['Spectacle'])}</h3>
          <p class="event-venue">${iconPin} ${escapeHTML(event['Lieu'])}, ${escapeHTML(event['Ville'])}</p>
          <p class="event-time">${iconClock} ${escapeHTML(event['Heure'])}</p>`;

    if (event['Tarif']) {
      html += `<p class="event-price">${iconTicket} ${escapeHTML(event['Tarif'])}</p>`;
    }
    if (event['Lien billetterie']) {
      const url = escapeHTML(event['Lien billetterie']);
      html += `<a href="${url}" target="_blank" rel="noopener" class="btn btn-primary btn-small">Réserver \u2192</a>`;
    }

    html += `</div></article>`;
    return html;
  }

  // Rendu d'une carte événement passé
  function renderPastEvent(event) {
    const date = parseDate(event['Date']);
    return `
      <article class="event-card-compact">
        <span class="event-date-compact">${formatDateCompact(date)}</span>
        <h4>${escapeHTML(event['Ville'])}</h4>
        <p>${escapeHTML(event['Lieu'])}</p>
      </article>`;
  }

  // Chargement et affichage des événements
  async function loadEvents() {
    try {
      const response = await fetch(SHEET_URL);
      if (!response.ok) throw new Error('Erreur réseau');
      const csv = await response.text();
      const events = parseCSV(csv);

      const today = new Date();
      today.setHours(0, 0, 0, 0);

      const upcoming = events
        .filter(e => parseDate(e['Date']) >= today)
        .sort((a, b) => parseDate(a['Date']) - parseDate(b['Date']));

      const past = events
        .filter(e => parseDate(e['Date']) < today)
        .sort((a, b) => parseDate(b['Date']) - parseDate(a['Date']))
        .slice(0, 6);

      const upcomingContainer = document.getElementById('upcoming-events');
      const sectionUpcoming = document.getElementById('section-upcoming');
      const sectionPast = document.getElementById('section-past');
      const sectionNoEvents = document.getElementById('section-no-events');
      const pastContainer = document.getElementById('past-events');

      if (upcoming.length > 0) {
        upcomingContainer.innerHTML = upcoming.map(renderUpcomingEvent).join('');
      } else {
        sectionUpcoming.style.display = 'none';
        sectionNoEvents.style.display = '';
      }

      if (past.length > 0) {
        pastContainer.innerHTML = past.map(renderPastEvent).join('');
        sectionPast.style.display = '';
      }
    } catch (error) {
      console.error('Erreur chargement événements:', error);
      document.getElementById('upcoming-events').innerHTML =
        '<p class="loading-text">Impossible de charger les dates. Réessayez plus tard.</p>';
    }
  }

  loadEvents();
</script>

<style>
  .page-header {
    background: linear-gradient(135deg, rgba(35, 61, 76, 0.95) 0%, rgba(0, 0, 0, 0.85) 100%);
    color: white;
    padding: 5rem 0 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    top: -250px;
    right: -100px;
    animation: cosmic-float 20s ease-in-out infinite;
  }

  @keyframes cosmic-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, -30px) scale(1.1); }
  }

  .page-header h1 {
    color: white;
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
    position: relative;
  }

  .page-subtitle {
    font-size: 1.35rem;
    opacity: 0.95;
    position: relative;
  }

  .events-upcoming {
    padding: var(--spacing-xl) 0;
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--spacing-lg);
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-style: italic;
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
  }

  .event-card {
    background-color: white;
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-md);
    display: flex;
    gap: 2rem;
    transition: all 0.4s ease;
    border: 1px solid rgba(35, 61, 76, 0.08);
    position: relative;
    overflow: hidden;
  }

  .event-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--color-secondary), var(--color-primary));
  }

  .event-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-5px);
  }

  .event-date {
    flex-shrink: 0;
    width: 90px;
    height: 110px;
    background: linear-gradient(135deg, var(--color-secondary) 0%, #e06a1a 100%);
    color: white;
    border-radius: var(--radius-md);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    box-shadow: var(--shadow-sm);
  }

  .date-day {
    font-size: 2.75rem;
    font-weight: 700;
    line-height: 1;
    font-family: var(--font-heading);
  }

  .date-month {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }

  .date-year {
    font-size: 0.85rem;
    opacity: 0.9;
    margin-top: 0.25rem;
  }

  .event-details h3 {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    color: var(--color-primary);
    font-family: var(--font-heading);
  }

  .event-venue,
  .event-time,
  .event-price {
    font-size: 0.95rem;
    color: #6B7280;
    margin-bottom: 0.5rem;
  }

  .btn-small {
    padding: 0.75rem 1.5rem;
    font-size: 0.95rem;
    margin-top: 1rem;
  }

  .loading-text {
    text-align: center;
    color: #6B7280;
    font-size: 1.1rem;
    padding: 2rem 0;
  }

  .no-events {
    padding: var(--spacing-xl) 0;
    text-align: center;
  }

  .no-events p {
    font-size: 1.25rem;
    color: #6B7280;
    margin-bottom: 2rem;
  }

  /* Événements passés */
  .events-past {
    padding: var(--spacing-lg) 0;
    background: linear-gradient(135deg, var(--color-light-bg) 0%, white 100%);
  }

  .events-grid-compact {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .event-card-compact {
    background: white;
    padding: 1.5rem;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(35, 61, 76, 0.08);
    transition: all 0.3s ease;
  }

  .event-card-compact:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-3px);
  }

  .event-date-compact {
    display: block;
    font-size: 0.85rem;
    color: var(--color-secondary);
    font-weight: 600;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .event-card-compact h4 {
    color: var(--color-primary);
    margin-bottom: 0.25rem;
    font-size: 1.1rem;
  }

  .event-card-compact p {
    font-size: 0.9rem;
    color: #6B7280;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, #1a3340 100%);
    color: white;
    padding: var(--spacing-xl) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(253, 128, 46, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    top: -250px;
    right: -100px;
    animation: cosmic-float 20s ease-in-out infinite;
  }

  .cta-section h2 {
    color: white;
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin-bottom: 1.5rem;
    position: relative;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    position: relative;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0 2rem;
    }

    .events-grid {
      grid-template-columns: 1fr;
    }

    .event-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .event-date {
      width: 100px;
      height: 100px;
    }

    .events-grid-compact {
      grid-template-columns: 1fr;
    }
  }
</style>
